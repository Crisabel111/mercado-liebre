<!DOCTYPE html>
<html lang="en">
<head>  <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle de producto</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
    <link href="/css/styles-vista-usuarios.css"rel="stylesheet">
    <link rel="stylesheet" href="/css/styles-home.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;700&display=swap" rel="stylesheet">

</head>
<body>
  <!-- Header -->
<%- include('../partials/header') %>
<!--  Fin de Header -->

    <!-- PERFIL  DE USUARIO -->
    <section class="perfil-usuario">
      <div class="header">
        <div class="cover">
          <div class="perfil-usuario-avatar">
            <img src="">
          </div>
        </div>
      </div>
      </div>
      <!-- DATOS  DE USUARIO -->
      <div class="usuario-perfil-body">
        <div class="usuario-perfil-bio">
          <h3 class="titulo">Datos del usuario</h3>
        </div>
        <div class="usuario-perfil-footer">
          <ul class="datos">
            <div>
                <!--nombre del usuario-->
                <div class="celda">
                    <label for="nombre">Nombre Completo<span class="asterisco">*</span></label>
                    <div>  
                        <input type="text" id="nombre" name="name" class="form-control input" > 
                                                                     
                    </div>
                    
                </div>

                <!--email del usuario-->
                <div class="celda" id="campos_email">             
                    <label for="email" >Email<span class="asterisco">*</span></label>
                    <div class="input-group flex-nowrap">
                    </div>
                    <input type="email" id="email" name="email" class="form-control input"  id="email">
                   
                </div>

                <!--imagen de perfil del usuario-->
                <div class="celda" id="campos_imagen">       
                    <label for="formFile"  class="form-label">Selecciona tu imagen de perfil<span class="asterisco">*</span></label>
                    <div>
                        <input type="file" id="imagen" class="form-control input"  name="imagen" >
                        <span></span>
                    </div>
                </div>

                          

                <!--password del usuario-->
                <div class="celda" id="campos_contraseña">       <!-- FALTA AGREGAR OPCION VER CONTRASEÑA -->
                    <label for="contraseña">Contraseña<span class="asterisco">*</span></label>
                    <div>
                        <input type="password" id="contraseña" class="form-control input" name="password" placeholder="Ej: Contraseña123" >
                        <span></span>
                        
                    </div>
                </div>
                <div class="celda" id="campos_tipo-usuario">
                    <label for="validationDefault01" class="form-label">Tipo de usuario</label>
                    <select id="validationDefault01" name="pais" required class="form-control">
                      <option value="colombia">Comun</option>
                      <option value="mexico">Admin</option>
                    </select>

                </div>
            </div>
          </ul>
        </div>
        <!-- BOTENES DE EDITAR Y ELIMINAR USUARIO -->
        <div class="d-grid gap-2 d-md-block">
          <br><a type="button" class="btn btn-outline-dark" class="btn btn-primary" href="#" role="button">Agregar Usuario</a>
          <a type="button" class="btn btn-outline-danger" class="btn btn-primary" href="#" role="button">Eliminar </a>
        </div>
      </div>
    </section>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>  
  </body>
  
  </html>
