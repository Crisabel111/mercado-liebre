</head>

<body>
	<!-- Header -->
<%- include('../partials/header') %>
<!--  Fin de Header -->
	  
    <!-- PERFIL  DE USUARIO -->
	<section class="perfil-usuario">
		<div class="usuario-perfil-body">
		  <div class="usuario-perfil-bio">
			<h3 class="titulo">Listado de usuarios</h1></h3>
		  </div>
		  <div class="usuario-perfil-footer">
		<table class="listado">
			<thead>
				<tr>
					<th><h1>ID</h1></th>
					<th><h1>Nombre</h1></th>
					<th><h1>Correo</h1></th>
					<th><h1>Perfil</h1></th>
					<th colspan="2"><h1>Opciones</h1></th>
				</tr>
			</thead>
			<tbody>
				<% for(let i = 0; i < usuarios.length; i++){ %> 
					<tr>
						<td> <%= usuarios[i].id %></td>
						<td><%= usuarios[i].nombre %></td>
						<td><%= usuarios[i].correo%></td>
						<td><%= usuarios[i].tipo %></td>
						<td class="icono"><a href="editar/<%= usuarios[i].id %>"><span class="fa fa-pencil-square-o fa-2x"></span></a></td>	
						<td class="icono"><a href="eliminar/<%= usuarios[i].id %>"><span class="fa fa-trash fa-2x"></span></a></td>	
					</tr>
					
				<% } %>
			</tbody>
		</table>

	</div>
	<br><a type="button" class="btn btn-outline-dark" class="btn btn-primary" href="/user/registro" role="button">Agregar usuario</a>

		 
</div>
</section>


        <script src="https://use.fontawesome.com/bf66789927.js"></script>
    </body>
    </html>